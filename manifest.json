{
    "background": {
        "scripts": ["src/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "img/icon-128.png",
        "default_title": "Collect with Mediathread"
    },
    "web_accessible_resources": [
        "img/*.png",
        "css/mediathread_collect.css"
    ],
    "name": "Mediathread",
    "description": "Find assets to analyze in Mediathread.",
    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "externally_connectable": {
        "matches": [
            "*://*.columbia.edu/*",
            "*://*.dartmouth.edu/*",
            "*://localhost:*/*"
        ]
    },
    "version": "0.9.7",
    "manifest_version": 2,
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}
